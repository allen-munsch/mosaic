# ============================================================================
# Semantic Fabric Environment Configuration
# ============================================================================

# Cluster Configuration
CLUSTER_SECRET=change-this-to-a-secure-random-string
COOKIE=semantic_fabric_secret_cookie_change_me

# Embedding Service
# Options: 'local', 'openai', 'huggingface'
EMBEDDING_MODEL=local
EMBEDDING_DIM=1024
EMBEDDING_BATCH_SIZE=32

# OpenAI Configuration (if using OpenAI embeddings)
OPENAI_API_KEY=

# Storage Paths
STORAGE_PATH=/data/shards
ROUTING_DB_PATH=/data/routing/index.db
CACHE_PATH=/data/cache

# Sharding Configuration
SHARD_SIZE=10000
SHARD_DEPTH=3

# Query Configuration
DEFAULT_SHARD_LIMIT=50
DEFAULT_RESULT_LIMIT=20
QUERY_TIMEOUT=10000
MIN_SIMILARITY=0.1

# Routing Configuration
ROUTING_CACHE_SIZE=10000

# Circuit Breaker Configuration
FAILURE_THRESHOLD=5
SUCCESS_THRESHOLD=3
CIRCUIT_TIMEOUT_MS=60000

# Crawler Configuration
CRAWL_DELAY_MS=1000
MAX_CRAWL_DEPTH=3

# PageRank Configuration
PAGERANK_ITERATIONS=10
PAGERANK_DAMPING=0.85
PAGERANK_INTERVAL_HOURS=24

# Erlang VM Configuration
ERL_MAX_PORTS=65536
ERL_SCHEDULERS_ONLINE=4

# API Configuration
PORT=4040

# Redis Configuration (if used)
REDIS_HOST=redis
REDIS_PORT=6379

# Monitoring
GRAFANA_ADMIN_PASSWORD=admin
PROMETHEUS_RETENTION_DAYS=30

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=

# Log Level
# Options: debug, info, warn, error
LOG_LEVEL=info

# Development/Production Mode
MIX_ENV=prod
